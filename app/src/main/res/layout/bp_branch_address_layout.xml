<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_5"
        android:layout_marginRight="@dimen/size_5"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/size_5"
        app:cardElevation="@dimen/size_5"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/item_place_holder" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/branchAddressLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/size_10"
                    android:layout_weight="85"
                    android:visibility="visible"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/muli_regular"
                            android:text="Branch Name  : "
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_12" />

                        <TextView
                            android:id="@+id/tvSolID"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/muli_bold"
                            android:maxLines="1"
                            android:text="ABC Pvt. ltd."
                            android:paddingStart="10dp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_size_14" />
                        <!--
                                            <LinearLayout
                                                android:id="@+id/threeDotsLayout"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentEnd="true"
                                                android:gravity="end"
                                                android:paddingEnd="10dp">

                                                <ImageView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:background="@drawable/threedots" />

                                            </LinearLayout>-->

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/size_2"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/muli_regular"
                                android:text="Location  : "
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_12" />

                            <TextView
                                android:id="@+id/tvLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/muli_regular"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_12" />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/branchContactPersonLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/size_10"
                    android:layout_weight="85"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/muli_regular"
                            android:text="Contact Person : "
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_12" />

                        <TextView
                            android:id="@+id/tvContactPerson"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/muli_bold"
                            android:maxLines="1"
                            android:text="ABC Pvt. ltd."
                            android:paddingStart="10dp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_size_14" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/size_2"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/muli_regular"
                                android:text="Contact  : "
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_12" />

                            <TextView
                                android:id="@+id/tvContact"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/muli_regular"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_12" />

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:id="@+id/chat_view"
                            android:layout_width="@dimen/size_30"
                            android:layout_height="@dimen/size_30"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/size_15"
                            android:background="@drawable/rounded_blue_background"
                            android:backgroundTint="#1AE4574A"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/chat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/message_icon"
                                android:backgroundTint="@color/red"
                                android:padding="@dimen/size_5" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/call_view"
                            android:layout_width="@dimen/size_30"

                            android:layout_height="@dimen/size_30"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/size_15"
                            android:layout_toLeftOf="@id/chat_view"
                            android:background="@drawable/rounded_grey_background"
                            android:backgroundTint="#1A4CAF50"

                            android:gravity="center">

                            <ImageView
                                android:id="@+id/phone"
                                android:layout_width="@dimen/size_15"
                                android:layout_height="@dimen/size_15"
                                android:background="@drawable/ic_baseline_local_phone_24"
                                android:backgroundTint="@color/green" />
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


                <ImageView
                    android:id="@+id/cross"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/ic_cross"
                    app:backgroundTint="@color/black"/>


            </LinearLayout>



        </LinearLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>