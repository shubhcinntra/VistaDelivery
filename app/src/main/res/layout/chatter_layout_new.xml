<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">


            <LinearLayout
                android:id="@+id/receiver_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/size_20"
                android:layout_marginTop="@dimen/size_10"
                android:layout_marginRight="@dimen/size_20"
                android:gravity="right"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/imageicon"
                    android:layout_width="@dimen/size_30"
                    android:layout_height="@dimen/size_30"
                    android:background="@drawable/rounded_border_edit">

                    <TextView
                        android:id="@+id/textimage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="P"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_16" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/messagelayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:background="@drawable/rounded_border_edit"
                    android:backgroundTint="#956387DA"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/receivertext"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/size_15"
                        android:text="Hi"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_16" />


                </LinearLayout>

                <TextView
                    android:id="@+id/receiverdatetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_5"
                    android:text="@string/date"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_12" />


            </LinearLayout>


        </androidx.core.widget.NestedScrollView>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="@dimen/size_25"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/size_10"
                android:layout_marginRight="@dimen/size_10">

                <ImageView
                    android:id="@+id/priority_dot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_baseline_directions_run_24" />

                <View
                    android:layout_width="@dimen/text_size_6"
                    android:layout_height="match_parent"
                    android:layout_below="@id/priority_dot"
                    android:layout_centerHorizontal="true"
                    android:background="@color/devider_color" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card"


                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="@dimen/size_5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_10"
                        android:layout_marginEnd="@dimen/size_10"
                        android:layout_marginBottom="@dimen/size_20"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_size_5"
                            android:fontFamily="@font/muli_bold"
                            android:gravity="start"
                            android:maxLines="1"
                            android:text=" "
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_16" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_size_10"
                            android:layout_marginTop="@dimen/text_size_2"
                            android:orientation="horizontal">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/ttt"
                                android:layout_width="@dimen/size_35"
                                android:layout_height="@dimen/size_35"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/pro_pic"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/message"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/muli_semibold"
                                android:text=" Lorem ipsum dolor sit amet consectetur adipisicing elit. Dolores veniam libero sapiente cumque sed, eum ipsa amet! Recusandae, harum aut. Lorem ipsum dolor sit amet consectetur adipisicing elit. Quis, aliquid."
                                android:textColor="@color/black"

                                android:textSize="@dimen/text_size_14" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/text_size_10"
                                android:layout_marginTop="@dimen/text_size_3"
                                android:orientation="horizontal">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/group_image"
                                    android:layout_width="@dimen/size_30"
                                    android:layout_height="@dimen/size_30"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/pro_pic" />

                                <TextView
                                    android:id="@+id/more"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:fontFamily="@font/muli_regular"
                                    android:gravity="start"
                                    android:maxLines="1"
                                    android:text=" +3 more "
                                    android:textColor="@color/light_gray"
                                    android:textSize="@dimen/text_size_14" />

                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>