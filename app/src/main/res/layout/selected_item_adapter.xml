<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/text_size_15"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/remove"
            android:layout_width="@dimen/text_size_30"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/delete"
                android:layout_width="@dimen/text_size_18"
                android:layout_height="@dimen/text_size_18"
                android:src="@android:drawable/ic_delete" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/muli_bold"
                android:maxLines="1"
                android:text="Test Name"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/item_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginTop="@dimen/text_size_3"
                android:fontFamily="@font/muli_regular"
                android:text="A00003"
                android:textColor="@color/hint_color"
                android:textSize="@dimen/text_size_12" />

            <LinearLayout
                android:layout_width="@dimen/size_120"
                android:layout_height="@dimen/text_35"
                android:layout_marginTop="@dimen/text_size_2"
                android:background="@drawable/border"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/minus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:fontFamily="@font/muli_bold"
                    android:gravity="center"
                    android:text=" - "
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18" />

                <EditText
                    android:id="@+id/quantity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:fontFamily="@font/muli_regular"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="2"
                    android:text="5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18" />


                <TextView
                    android:id="@+id/plus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:fontFamily="@font/muli_bold"
                    android:gravity="center"
                    android:text=" + "
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/quantityeditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:fontFamily="@font/muli_regular"
                    android:gravity="center"
                    android:inputType="number"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/arr"
                android:layout_width="@dimen/text_size_24"
                android:layout_height="@dimen/text_size_24"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />


            <TextView
                android:id="@+id/unit_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/text_size_3"
                android:fontFamily="@font/muli_regular"
                android:text="Unit Price : 5.00 $ "
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/text_size_5"
                android:fontFamily="@font/muli_regular"
                android:text="Total : 25.00 $ "
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_size_1"
        android:layout_marginLeft="@dimen/text_size_20"
        android:layout_marginTop="@dimen/text_size_5"
        android:background="@color/hint_color" />

</LinearLayout>