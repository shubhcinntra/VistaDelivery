<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="70"
                        android:fontFamily="@font/muli_regular"
                        android:gravity="center_horizontal"
                        android:text="Filter"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_16"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/ivCrossIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_cross"
                        app:tint="@color/colorPrimary" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/leadStatusLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:visibility="gone"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="30"
                            android:fontFamily="@font/muli_regular"
                            android:text="Lead Status"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_14" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="70">

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Select Status"
                                app:boxCornerRadiusBottomEnd="10dp"
                                app:boxCornerRadiusBottomStart="10dp"
                                app:boxCornerRadiusTopEnd="10dp"
                                app:boxCornerRadiusTopStart="10dp">

                                <AutoCompleteTextView
                                    android:id="@+id/acStatus"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:focusable="false"
                                    android:maxLines="1"
                                    android:textSize="12sp" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </RelativeLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/assignedToLayout"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/leadStatusLayout"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp">


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="30"
                            android:fontFamily="@font/muli_regular"
                            android:text="Assigned To"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_14" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="70">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/customerLayout"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Select Assigned To"
                                app:boxCornerRadiusBottomEnd="10dp"
                                app:boxCornerRadiusBottomStart="10dp"
                                app:boxCornerRadiusTopEnd="10dp"
                                app:boxCornerRadiusTopStart="10dp">

                                <AutoCompleteTextView
                                    android:id="@+id/acAssignedTo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"
                                    android:textSize="12sp" />

                            </com.google.android.material.textfield.TextInputLayout>


                        </RelativeLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/assignRecyclerViewLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:layout_below="@+id/assignedToLayout"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp">


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="30"
                            android:fontFamily="@font/muli_regular"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_14" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:layout_weight="70">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvCustomerSearchList"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:orientation="horizontal" />


                        </RelativeLayout>


                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/leadSourceLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/assignedToLayout"
                        android:layout_marginTop="20dp"

                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="30"
                            android:fontFamily="@font/muli_regular"
                            android:text="Source"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_14" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="70">

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Select Source"
                                app:boxCornerRadiusBottomEnd="10dp"
                                app:boxCornerRadiusBottomStart="10dp"
                                app:boxCornerRadiusTopEnd="10dp"
                                app:boxCornerRadiusTopStart="10dp">

                                <AutoCompleteTextView
                                    android:id="@+id/acSource"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:maxLines="1"
                                    android:textSize="12sp" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </RelativeLayout>


                    </LinearLayout>





                    <LinearLayout
                        android:id="@+id/sourceRecyclerViewLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:layout_below="@+id/leadSourceLayout"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp">


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="30"
                            android:fontFamily="@font/muli_regular"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_14" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:layout_weight="70">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvSourceSearchList"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:orientation="horizontal" />


                        </RelativeLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/leadPriorityLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_below="@+id/leadSourceLayout"
                        android:layout_marginTop="20dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                       >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="30"
                            android:fontFamily="@font/muli_regular"
                            android:text="Lead Priority"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_14" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="70">

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Select Lead Priority"
                                app:boxCornerRadiusBottomEnd="10dp"
                                app:boxCornerRadiusBottomStart="10dp"
                                app:boxCornerRadiusTopEnd="10dp"
                                app:boxCornerRadiusTopStart="10dp">

                                <AutoCompleteTextView
                                    android:id="@+id/acLeadPriority"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:focusable="false"
                                    android:maxLines="1"
                                    android:textSize="12sp" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </RelativeLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/dateLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_below="@+id/leadPriorityLayout"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/fromDateLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="30"
                                android:fontFamily="@font/muli_regular"
                                android:text="From Date"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14" />

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="70">

                                <com.google.android.material.textfield.TextInputLayout
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Select From Date"
                                    app:boxCornerRadiusBottomEnd="10dp"
                                    app:boxCornerRadiusBottomStart="10dp"
                                    app:boxCornerRadiusTopEnd="10dp"
                                    app:boxCornerRadiusTopStart="10dp"
                                    app:endIconDrawable="@drawable/ic_calendar_icon"
                                    app:endIconMode="custom"
                                    app:endIconTint="@color/colorPrimary">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/edtFromDate"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:focusable="false"
                                        android:maxLines="1"
                                        android:textSize="12sp" />

                                </com.google.android.material.textfield.TextInputLayout>

                            </RelativeLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/toDateLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/fromDateLayout"
                            android:layout_marginTop="20dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="30"
                                android:fontFamily="@font/muli_regular"
                                android:text="To Date"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14" />

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="70">

                                <com.google.android.material.textfield.TextInputLayout
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Select To Date"
                                    app:boxCornerRadiusBottomEnd="10dp"
                                    app:boxCornerRadiusBottomStart="10dp"
                                    app:boxCornerRadiusTopEnd="10dp"
                                    app:boxCornerRadiusTopStart="10dp"
                                    app:endIconDrawable="@drawable/ic_calendar_icon"
                                    app:endIconMode="custom"
                                    app:endIconTint="@color/colorPrimary">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/edtToDate"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:focusable="false"
                                        android:maxLines="1"
                                        android:textSize="12sp" />

                                </com.google.android.material.textfield.TextInputLayout>

                            </RelativeLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/leadSourceSearchableLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/assignedToLayout"
                            android:layout_marginTop="20dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:visibility="visible">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="30"
                                android:fontFamily="@font/muli_regular"
                                android:text="Source"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14" />

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="70">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="15dp"

                                    android:background="@drawable/rounded_border_edit">

                                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                                        android:id="@+id/spinnerSearchable"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/text_45"
                                        android:layout_marginRight="15dp"
                                        android:layout_toLeftOf="@+id/callView"
                                        android:dropDownWidth="wrap_content"
                                        android:dropDownVerticalOffset="@dimen/text_45"
                                        android:forceHasOverlappingRendering="false"
                                        android:gravity="center_vertical|start"
                                        android:paddingLeft="@dimen/size_5"
                                        android:spinnerMode="dropdown"
                                        android:textSize="@dimen/text_size_14" />

                                </LinearLayout>

                            </RelativeLayout>


                        </LinearLayout>

                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/saveButtonLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/dateLayout"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="20dp"
                        android:gravity="center_horizontal"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp">


                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/resetBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:backgroundTint="@color/white"
                            android:text="Reset"
                            android:textAllCaps="false"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp"
                            android:visibility="visible"
                            app:cornerRadius="10dp" />


                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/applyBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:backgroundTint="@color/colorPrimary"
                            android:text="Apply"
                            android:textAllCaps="false"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:visibility="visible"
                            app:cornerRadius="10dp" />


                    </LinearLayout>

                </RelativeLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </ScrollView>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>