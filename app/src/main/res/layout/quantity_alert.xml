<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Unit Price"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:id="@+id/edUnitPrice"
                android:layout_width="300dp"
                android:layout_height="44dp"
                android:layout_marginTop="@dimen/text_size_20"
                android:background="@drawable/rounded_border_edit"
                android:elevation="1dp"
                android:gravity="center_vertical"
                android:hint="0"
                android:inputType="number"
                android:maxLength="15"
                android:paddingLeft="10dp"
                android:textSize="15sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="@string/enter_qty"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="300dp"
                android:layout_height="44dp"
                android:layout_marginTop="@dimen/text_size_20"
                android:background="@drawable/rounded_border_edit"
                android:elevation="1dp"
                android:gravity="center_vertical"
                android:hint="@string/qty"
                android:inputType="number"
                android:maxLength="15"
                android:paddingLeft="10dp"
                android:text="1"
                android:textSize="15sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/discount_percent"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:id="@+id/discount_value"
                android:layout_width="300dp"
                android:layout_height="44dp"
                android:layout_marginTop="@dimen/text_size_20"
                android:background="@drawable/rounded_border_edit"
                android:elevation="1dp"
                android:gravity="center_vertical"
                android:hint="Discount"
                android:inputType="number"
                android:maxLength="15"
                android:paddingLeft="10dp"
                android:text="0"
                android:textSize="15sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/tax"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:id="@+id/tax_value"
                android:layout_width="300dp"
                android:layout_height="44dp"
                android:layout_marginTop="@dimen/text_size_20"
                android:background="@drawable/rounded_border_edit"
                android:editable="false"
                android:elevation="1dp"
                android:gravity="center_vertical"
                android:hint="0"
                android:inputType="number"
                android:maxLength="15"
                android:paddingLeft="10dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/posting_date_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_15"
                android:fontFamily="@font/muli_regular"
                android:text="@string/delivery_date"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14" />


            <LinearLayout
                android:id="@+id/postingDateLinearItem"
                android:layout_width="300dp"
                android:layout_height="@dimen/text_45"
                android:layout_marginTop="@dimen/size_10"
                android:background="@drawable/rounded_border"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edDeliveryDateItem"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_45"
                    android:layout_weight="0.9"
                    android:background="@null"
                    android:clickable="true"
                    android:focusable="false"
                    android:fontFamily="@font/muli_regular"
                    android:gravity="center_vertical"
                    android:hint="delivery_date"
                    android:imeOptions="actionNext"
                    android:inputType="date"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/size_15"
                    android:textColorHint="@color/light_grey_box"
                    android:textSize="@dimen/text_size_14" />

                <ImageView
                    android:id="@+id/postCal"
                    android:layout_width="@dimen/size_30"
                    android:layout_height="@dimen/size_30"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginRight="@dimen/size_10"
                    android:layout_weight="0.1"
                    android:padding="@dimen/size_2"
                    android:src="@drawable/ic_calendar_icon" />

            </LinearLayout>

            <Button
                android:id="@+id/button"
                android:layout_width="70dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/text_size_20"
                android:layout_marginBottom="6sp"
                android:background="@drawable/dialog_border"
                android:backgroundTint="@color/colorPrimary"
                android:gravity="center"
                android:text="OK"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>

    </ScrollView>





</LinearLayout>
