<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_15"
        android:layout_marginRight="@dimen/size_15"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="@dimen/size_10">


        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/muli_regular"
            android:gravity="start"
            android:text="@string/title"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14" />

        <EditText
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_45"
            android:layout_marginTop="@dimen/size_10"
            android:background="@drawable/rounded_border"
            android:gravity="center_vertical"
            android:hint="@string/title"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLength="100"
            android:maxLines="1"
            android:paddingLeft="@dimen/size_8"
            android:textColorHint="@color/light_grey_box"
            android:textSize="@dimen/text_size_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_15"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_7"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli_regular"
                    android:gravity="start"
                    android:text="@string/date_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14" />

                <RelativeLayout
                    android:id="@+id/date_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_45"
                    android:layout_marginTop="@dimen/size_10"
                    android:background="@drawable/rounded_border">

                    <EditText
                        android:id="@+id/date_value"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_45"
                        android:layout_marginRight="@dimen/size_5"
                        android:layout_toLeftOf="@id/img11"
                        android:background="@null"
                        android:clickable="true"
                        android:focusable="false"
                        android:gravity="center_vertical"
                        android:hint="@string/select_date"
                        android:imeOptions="actionNext"
                        android:inputType="date"
                        android:paddingLeft="@dimen/size_8"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14" />

                    <ImageView
                        android:id="@id/img11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/size_5"
                        android:background="@drawable/ic_calendar_icon" />


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_7"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli_regular"
                    android:gravity="start"
                    android:text="@string/time"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_45"
                    android:layout_marginTop="@dimen/size_10"
                    android:background="@drawable/rounded_border">

                    <TextView
                        android:id="@+id/time_value"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_45"
                        android:layout_marginLeft="@dimen/size_5"
                        android:layout_toLeftOf="@id/img2"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:hint="@string/time"
                        android:imeOptions="actionNext"
                        android:inputType="time"
                        android:paddingLeft="@dimen/size_8"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14" />

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/size_5"
                        android:background="@drawable/time" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_15"
            android:fontFamily="@font/muli_regular"
            android:gravity="start"
            android:text="@string/description"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14" />

        <EditText
            android:id="@+id/description_text"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginBottom="@dimen/size_40"
            android:background="@drawable/rounded_border"
            android:gravity="start"
            android:hint="@string/description"
            android:imeOptions="actionDone"
            android:inputType="textMultiLine"
            android:maxLines="4"
            android:paddingLeft="@dimen/size_8"
            android:paddingTop="@dimen/size_5"
            android:textColorHint="@color/light_grey_box"
            android:textSize="@dimen/text_size_14" />

        <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_40"
            android:layout_marginBottom="@dimen/size_15"
            android:background="@drawable/button_rounded_corner"
            android:backgroundTint="@color/colorPrimary"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/muli_regular"
            android:gravity="center"
            android:text="@string/submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>

</ScrollView>
