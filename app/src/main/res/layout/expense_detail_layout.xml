<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <include
        android:id="@+id/headerLayout"
        layout="@layout/header_bottom_rounded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_10"
                android:visibility="visible"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/size_8"
                app:cardElevation="@dimen/size_4"
                app:cardMaxElevation="@dimen/size_4"
                app:cardPreventCornerOverlap="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:visibility="visible">


                        <TextView
                            android:id="@+id/tv_employee_name"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/size_45"
                            android:layout_weight="1"
                            android:background="@drawable/heading_bg_shape"
                            android:gravity="center_vertical"
                            android:text="General Details  "
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_14" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_10"
                        android:layout_marginRight="@dimen/size_10"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_45"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="Trip Name"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/text_size_14" />


                        <TextView
                            android:id="@+id/tvTripName"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_45"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_14" />


                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_10"
                        android:layout_marginRight="@dimen/size_10"
                        android:gravity="center_vertical"
                        android:minHeight="@dimen/size_45"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Expense Employee By"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/text_size_14" />

                        <TextView
                            android:id="@+id/tvTravelBy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:maxLines="4"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_14" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_10"
                        android:layout_marginRight="@dimen/size_10"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_45"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="Type of Expense"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/text_size_14" />


                        <TextView
                            android:id="@+id/tvExpenseName"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_45"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_size_14" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_10"
                        android:layout_marginRight="@dimen/size_10"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_45"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="From Expense Date"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/text_size_14" />


                        <TextView
                            android:id="@+id/tvFromExpenseDate"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_45"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_size_14" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_10"
                        android:layout_marginRight="@dimen/size_10"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_45"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="To Expense Date"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/text_size_14" />


                        <TextView
                            android:id="@+id/tvToExpenseDate"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_45"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_size_14" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_10"
                        android:layout_marginRight="@dimen/size_10"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_45"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="Total Amount"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/text_size_14" />

                        <TextView
                            android:id="@+id/tvTotalAmount"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_45"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_size_14" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_10"
                        android:layout_marginRight="@dimen/size_10"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_45"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="Remarks"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/text_size_14" />


                        <TextView
                            android:id="@+id/tvRemarrks"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_45"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_size_14" />


                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_10"
                android:visibility="visible"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/size_8"
                app:cardElevation="@dimen/size_4"
                app:cardMaxElevation="@dimen/size_4"
                app:cardPreventCornerOverlap="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:visibility="visible">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/size_45"
                            android:layout_weight="1"
                            android:background="@drawable/heading_bg_shape"
                            android:gravity="center_vertical"
                            android:text="Attachment  "
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_14" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="50dp"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/prevattachment"
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <include
        android:id="@+id/loaderLayout"
        layout="@layout/loader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>